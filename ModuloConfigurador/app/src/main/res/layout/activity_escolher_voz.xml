<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ufabc.projeto.moduloconfigurador.EscolherVoz"
    android:gravity="center_vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escolher a voz"
        android:background="@drawable/textview_border"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="39sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/imageView1Id"
        android:layout_marginTop="15dp"
        android:contentDescription="Primeira voz"
        android:background="@drawable/voz"
        android:layout_gravity="center_vertical" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/imageView2Id"
        android:contentDescription="Segunda Voz"
        android:layout_gravity="center_vertical"
        android:background="@drawable/voz1"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/imageView3Id"
        android:contentDescription="Terceira voz"
        android:layout_gravity="center_vertical"
        android:background="@drawable/voz2"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/imageView4Id"
        android:contentDescription="Ultima voz"
        android:layout_gravity="center_vertical"
        android:background="@drawable/voz3"/>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/botaoIconeId"
        android:contentDescription="BotÃ£o para ir para proxima tela clique duas vezes para acionalo"
        android:background="@drawable/ic_action_goright"
        android:layout_gravity="right"
        />

</LinearLayout>
</ScrollView>